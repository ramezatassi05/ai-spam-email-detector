{
  "manifest_version": 3,
  "name": "Gmail Spam Detector",
  "version": "1.0",
  "description": "Classify Gmail emails as spam or not using a Naive Bayes classifier.",
  "permissions": [
    "activeTab",
    "scripting",
    "https://mail.google.com/"
  ],
  "host_permissions": [
    "https://mail.google.com/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}

  
  